{
  "compilerOptions": {
    "target": "es2018",                          
    "module": "commonjs",                    
    "lib": ["es2015", "es2016", "es2017"],                     
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*"]
}